@page 
@model CS3750_PlanetExpressLMS.Pages.CalendarModel
@{
    ViewData["Title"] = "Calendar";
    Layout = "Shared/_GeneralLayout.cshtml";
}
<h2 class="page-title">
    Calendar
</h2>
<hr />
  
<div id='calendar'></div>

<link href='~/lib/fullcalendar/lib/main.css' rel='stylesheet' />
<script src='~/lib/fullcalendar/lib/main.js'></script>
<script>

    document.addEventListener('DOMContentLoaded', function () {
        var calendarEl = document.getElementById('calendar');
        var calendar = new FullCalendar.Calendar(calendarEl, {
            initialVeiw: 'dayGridMonth',
            headerToolbar: {
                left: 'prev next today',
                center: 'title',
                right: 'dayGridMonth,timeGridWeek,timeGridDay'
            },
            contentHeight: "auto",
            handleWindowResize: true,
            events: @Html.Raw(Model.jsonEvents)
                });
        calendar.render();
    });

</script> 