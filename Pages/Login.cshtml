@page
@model CS3750_PlanetExpressLMS.Pages.LoginModel
@{
    ViewData["Title"] = "Login";
    Layout = "Shared/_RegisterLoginLayout.cshtml";
}
    <div class="container">
        <main role="main" class="pb-3">
            <h1>
                User Login
            </h1>
            <hr />
            <div> 
                <label class="text-danger">@Model.errorMessage</label> 
            </div>
            <div class="row">
                <div class="col-md-4">
                    <form method="post" id="login-form">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div> @*Add this to validate user input*@
                        <div class="form-group">
                            <label asp-for="user.Email" class="control-label"></label> @*The label name*@
                            <input type="text" asp-for="user.Email" class="form-control" id="username-input"/> @*The user input field*@
                            <span asp-validation-for="user.Email" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                        <label asp-for="user.Password" class="control-label"></label> @*The label name*@
                            <input type="password" asp-for="user.Password" class="form-control" id="password-input"/> @*The user input field*@
                            <span asp-validation-for="user.Password" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input type="submit" class="btn btn-primary" value="Login" />
                        </div>
                    </form>
                </div>
            </div>
            <a asp-page="./Register">Register a New User</a>
        </main>
    </div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
