@page
@model CS3750_PlanetExpressLMS.Pages.Account.RegisterModel

@{
    ViewData["Title"] = "Register";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Register a New User</h1>
<hr />
<div>
    <label class="text-danger">@Model.errorMessage</label>
</div>
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Credential.Email" class="control-label"></label>
                <input asp-for="Credential.Email" class="form-control" />
                <span asp-validation-for="Credential.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Credential.Password" class="control-label"></label>
                <input asp-for="Credential.Password" class="form-control" />
                <span asp-validation-for="Credential.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Credential.FirstName" class="control-label"></label>
                <input asp-for="Credential.FirstName" class="form-control" />
                <span asp-validation-for="Credential.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Credential.LastName" class="control-label"></label>
                <input asp-for="Credential.LastName" class="form-control" />
                <span asp-validation-for="Credential.LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Credential.Birthday" class="control-label"></label>
                <input asp-for="Credential.Birthday" class="form-control" />
                <span asp-validation-for="Credential.Birthday" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Register" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Login">Back to Login</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
